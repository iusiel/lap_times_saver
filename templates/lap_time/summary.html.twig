{% extends 'admin.layout.html.twig' %}

{% block title %}Lap Time Summary{% endblock %}

{% block content %}
    <div class="container">
        <h1>Lap Time Summary</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Track</th>
                    <th>Car</th>
                    <th>Personal Best</th>
                    <th>Average Lap Time</th>
                    <th>Median Lap Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
        {%for group in summary %}
            <tr>
                <td>{{ group.game.Name }}</td>
                <td>{{ group.track.Name }}</td>
                <td>{{ group.car.Name }}</td>
                <td>{{ group.personalBestLapTime}}</td>
                <td>{{ group.averageLapTime }}</td>
                <td>{{ group.medianLapTime }}</td>
                <td><a href="{{ path('app_lap_time_chart', {'game': group.game.id, 'track': group.track.id, 'car': group.car.id}) }}"><button class="btn btn-primary">See Related Chart</button></a></td>
            </tr>
        {% endfor %}
        </table>
{% endblock %}
