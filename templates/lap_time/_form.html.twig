<link rel="stylesheet" href="{{ asset('build/select2/css/select2.min.css') }}" />

<script src="{{ asset('build/jquery/jquery-3.6.0.min.js') }}"></script>
<script src="{{ asset('build/select2/js/select2.min.js') }}"></script>

<div data-controller="laptimeform">
    {{ form_start(form,  {'attr': {'id': 'lapTimeForm'}}) }}
        <div class="mb-2">
        {{ form_label(form.Date) }}
        {{ form_widget(form.Date) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.Date) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.Game) }}
        {{ form_widget(form.Game) }}
        </div>
        {% if (featureFlag("CREATE_NEW_INSIDE_LAP_TIME")) %}
        <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Create new game
        </button>
        {% endif %}
        <div class="form__error-message mb-2">
        {{ form_errors(form.Game) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.Car) }}
        {{ form_widget(form.Car) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.Car) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.Track) }}
        {{ form_widget(form.Track) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.Track) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.Time) }}
        {{ form_widget(form.Time) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.Time) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.IsPractice) }}
        {{ form_widget(form.IsPractice) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.IsPractice) }}
        </div>

        <div class="mb-2">
        {{ form_label(form.ExtraNotes) }}
        {{ form_widget(form.ExtraNotes) }}
        </div>
        <div class="form__error-message mb-2">
        {{ form_errors(form.ExtraNotes) }}
        </div>

        <button class="btn btn-primary my-3">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>

{% if (featureFlag("CREATE_NEW_INSIDE_LAP_TIME")) %}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <iframe src="{{ path('app_car_new', {'iframe': 'true'}) }}"></iframe>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endif %}